SRC = main.cpp Harl.cpp

OBJ = $(SRC:.cpp=.o)

CPP = c++

INC = Harl.hpp

CPPFLAGS = -Wall -Wextra -Werror -std=c++98

NAME = Harl

RM = rm -f

all: $(NAME)

$(NAME): $(OBJ) $(INC)
	$(CPP) $(CPPFLAGS) -o $(NAME) $(OBJ)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re : fclean all
